<% content_for :page_title, @user.display_name %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- User Info Card -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <div class="text-center mb-6">
      <div class="w-20 h-20 bg-gradient-to-br from-violet-500 to-indigo-500 rounded-full flex items-center justify-center text-white text-2xl font-bold mx-auto mb-4">
        <%= @user.username&.first&.upcase || @user.email.first.upcase %>
      </div>
      <h2 class="text-xl font-bold text-gray-900 dark:text-white"><%= @user.display_name %></h2>
      <p class="text-gray-500 dark:text-gray-400"><%= @user.email %></p>
      <span class="inline-flex mt-2 px-3 py-1 text-sm font-medium rounded-full bg-violet-100 text-violet-800 dark:bg-violet-900/50 dark:text-violet-300">
        <%= @user.role.humanize %>
      </span>
    </div>

    <div class="space-y-4 text-sm">
      <div class="flex justify-between">
        <span class="text-gray-500 dark:text-gray-400">Posts</span>
        <span class="font-medium text-gray-900 dark:text-white"><%= @user.posts.count %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-500 dark:text-gray-400">Published</span>
        <span class="font-medium text-gray-900 dark:text-white"><%= @user.posts.published.count %></span>
      </div>
      <div class="flex justify-between">
        <span class="text-gray-500 dark:text-gray-400">Joined</span>
        <span class="font-medium text-gray-900 dark:text-white"><%= @user.created_at.strftime('%b %d, %Y') %></span>
      </div>
    </div>

    <% if @user.bio.present? %>
      <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-600 dark:text-gray-400"><%= @user.bio %></p>
      </div>
    <% end %>
  </div>

  <!-- User Posts -->
  <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h3 class="font-semibold text-gray-900 dark:text-white">Posts by <%= @user.display_name %></h3>
    </div>

    <% if @posts.any? %>
      <div class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @posts.each do |post| %>
          <div class="px-6 py-4 flex items-center justify-between">
            <div>
              <%= link_to post.title, admin_post_path(post), class: "font-medium text-gray-900 dark:text-white hover:text-violet-600" %>
              <p class="text-sm text-gray-500 dark:text-gray-400"><%= post.created_at.strftime('%b %d, %Y') %></p>
            </div>
            <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
              <% case post.status %>
              <% when 'published' %>
                bg-emerald-100 text-emerald-800 dark:bg-emerald-900/50 dark:text-emerald-300
              <% when 'draft' %>
                bg-amber-100 text-amber-800 dark:bg-amber-900/50 dark:text-amber-300
              <% else %>
                bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300
              <% end %>
            ">
              <%= post.status.humanize %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500 dark:text-gray-400">
        No posts yet
      </div>
    <% end %>
  </div>
</div>
