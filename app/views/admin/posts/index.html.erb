<% content_for :page_title, "Posts" %>

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-gray-50 dark:bg-gray-900/50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Author</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Views</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @posts.each do |post| %>
          <tr class="hover:bg-gray-50 dark:hover:bg-gray-900/50">
            <td class="px-6 py-4">
              <%= link_to post.title, admin_post_path(post), class: "font-medium text-gray-900 dark:text-white hover:text-violet-600 line-clamp-1" %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">
              <%= post.user.display_name %>
            </td>
            <td class="px-6 py-4">
              <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full
                <% case post.status %>
                <% when 'published' %>
                  bg-emerald-100 text-emerald-800 dark:bg-emerald-900/50 dark:text-emerald-300
                <% when 'draft' %>
                  bg-amber-100 text-amber-800 dark:bg-amber-900/50 dark:text-amber-300
                <% else %>
                  bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300
                <% end %>
              ">
                <%= post.status.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">
              <%= post.views_count || 0 %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">
              <%= post.created_at.strftime('%b %d, %Y') %>
            </td>
            <td class="px-6 py-4 text-right">
              <div class="flex items-center justify-end gap-2">
                <%= link_to edit_admin_post_path(post), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-violet-600 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                <% end %>
                <%= button_to admin_post_path(post), method: :delete, data: { turbo_confirm: "Delete this post?" }, class: "p-2 text-gray-600 dark:text-gray-400 hover:text-red-600 hover:bg-gray-100 dark:hover:bg-gray-700 rounded-lg" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
