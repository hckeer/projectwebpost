<% featured ||= false %>

<article class="<%= featured ? 'lg:col-span-2 lg:row-span-2' : '' %> group bg-white dark:bg-gray-800 rounded-2xl shadow-sm hover:shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-300">
  <% if post.images.attached? %>
    <div class="relative overflow-hidden <%= featured ? 'aspect-video' : 'aspect-video' %>">
      <%= image_tag post.images.first.variant(resize_to_fill: [800, 450]), class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-500", alt: post.title %>
      <% if post.featured? %>
        <div class="absolute top-4 left-4 px-3 py-1 bg-gradient-to-r from-amber-500 to-orange-500 text-white text-xs font-semibold rounded-full">
          Featured
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="relative <%= featured ? 'aspect-video' : 'aspect-video' %> bg-gradient-to-br from-violet-500 to-indigo-600 flex items-center justify-center">
      <svg class="w-16 h-16 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
      </svg>
      <% if post.featured? %>
        <div class="absolute top-4 left-4 px-3 py-1 bg-gradient-to-r from-amber-500 to-orange-500 text-white text-xs font-semibold rounded-full">
          Featured
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="p-6">
    <% if post.category %>
      <span class="inline-block px-3 py-1 text-xs font-medium bg-violet-100 dark:bg-violet-900/50 text-violet-700 dark:text-violet-300 rounded-full mb-3">
        <%= post.category.name %>
      </span>
    <% end %>

    <h3 class="<%= featured ? 'text-2xl' : 'text-lg' %> font-bold text-gray-900 dark:text-white mb-2 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors line-clamp-2">
      <%= link_to post.title, post %>
    </h3>

    <% if post.excerpt.present? %>
      <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
        <%= post.excerpt %>
      </p>
    <% end %>

    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-gradient-to-br from-violet-500 to-indigo-500 rounded-full flex items-center justify-center text-white text-sm font-medium">
          <%= post.user.username&.first&.upcase || post.user.email.first.upcase %>
        </div>
        <div>
          <p class="text-sm font-medium text-gray-900 dark:text-white"><%= post.user.display_name %></p>
          <p class="text-xs text-gray-500 dark:text-gray-400"><%= post.created_at.strftime('%b %d, %Y') %></p>
        </div>
      </div>

      <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <%= post.views_count || 0 %>
        </span>
        <span><%= post.reading_time %> min</span>
      </div>
    </div>

    <% if post.tags.any? %>
      <div class="mt-4 flex flex-wrap gap-2">
        <% post.tags.limit(3).each do |tag| %>
          <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded">
            #<%= tag.name %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</article>
